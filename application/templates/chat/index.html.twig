{% extends 'base.html.twig' %}

{% block title %}{{ 'Chat bot' }}{% endblock %}

{% block body %}
<input type="hidden" id="symplr-chat-answer-url" value="{{ path('app_get_chat_answer') }}">
<div class="body_wrapper">
    <div class="container">
        <h3 class="text-uppercase">{{ 'Chat bot' }}</h3>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="button" id="symplr-chat-button">Submit</button>
        {{ form_end(form) }}

        <div class="symplr-chat-answer-container">
            <p class="symplr-chat-answer-text"></p>
        </div>
    </div>
</div>
{% endblock %}
