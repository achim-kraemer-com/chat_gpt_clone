{% extends 'base.html.twig' %}

{% block title %}Prompt Privacy Portal{% endblock %}

{% block body %}
<div class="body_wrapper">
    <div class="container">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="default-text">
            <img type="hidden" id="logo-privacy-portal" class="login-logo" src="{{ asset('build/images/prompt-privacy-portal/logo_prompt-privacy-portal_weiÃŸ.svg') }}">
            <p>Login and start the command prompt</p>
        </div>

        <div id="login-container">
            <form action="{{ path('app_login') }}" method="post">
                <div class="table">
                    <div class="table-row">
                        <div class="table-cell">
                            <label class="login-label" for="username">Email:</label>
                        </div>
                        <div class="table-cell">
                            <input type="text" id="username" name="_username" value="{{ last_username }}">
                        </div>
                    </div>

                    <div class="table-row">
                        <div class="table-cell">
                            <label class="login-label" for="password">Password:</label>
                        </div>
                        <div class="table-cell">
                            <input type="password" id="password" name="_password">
                        </div>
                    </div>
                </div>

                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"> #}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit" class="material-symbols-outlined">login</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
